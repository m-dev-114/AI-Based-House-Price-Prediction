import pandas as pd
import joblib
from sklearn.preprocessing import StandardScaler

# Load dataset
df = pd.read_csv('house_prices.csv')

# Extract Features (X)
X = df.drop(columns=['price'])

# Train Scaler
scaler = StandardScaler()
scaler.fit(X)

# Save Scaler
joblib.dump(scaler, 'scaler.pkl')
print("âœ… Scaler file saved successfully as 'scaler.pkl'. Upload this file to your deployment.")
